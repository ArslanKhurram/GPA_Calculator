<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText_Style_Portrait" parent="android:Widget.EditText">
        <item name="android:hint">Enter Grade</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">.0123456789</item>
        <item name="android:maxLength">5</item>
        <item name="android:layout_marginTop">46dp</item>

    </style>

    <style name="EditText_Style_Landscape" parent="android:Widget.EditText">
        <item name="android:hint">Enter Grade</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">.0123456789</item>
        <item name="android:maxLength">5</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <style name="TextView_Style_Portrait" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">55dp</item>
    </style>

    <style name="TextView_Style_Landscape" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

</resources>
